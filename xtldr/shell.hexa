// Hexa 2024 from clang 15.0.3
/// Starts XTLDR shell.
/// 
/// @return This routine does not return any value.
/// 
/// @since XT 1.0
fun blStartLoaderShell() {
	blInitializeConsole()
	blpPrintShellPrompt()
	??? CompoundStmt ForStmt
}

/// Prints XTLDR shell prompt.
/// 
/// @return This routine does not return any value.
/// 
/// @since XT 1.0
fun blpPrintShellPrompt() {
	blSetConsoleAttributes(0 | 14)
	blConsolePrint("XTLDR> ")
	blSetConsoleAttributes(0 | 7)
}
